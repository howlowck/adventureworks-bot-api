{
    "swagger": "2.0",
    "info": {
        "title": "Adventureworks Bot API",
        "description": "Adventureworks Bot makes your life easier",
        "version": "0.1.0"
    },
    "host": "adventureworks-bot-api.azurewebsites.net",
    "schemes": [
        "https"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/orders": {
            "get": {
                "summary": "Orders",
                "description": "The /orders endpoint retrieves all the orders given the filter for status and email of the user\n",
                "parameters": [
                    {
                        "name": "account",
                        "in": "query",
                        "description": "Account Number",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "orderdate",
                        "in": "query",
                        "description": "Order Date in YYYY-MM-DD Ex: 2017-01-29",
                        "required": false,
                        "type": "string"
                    }
                ],
                "tags": [
                    "Orders"
                ],
                "responses": {
                    "200": {
                        "description": "An array of orders",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Order"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/orders/{id}": {
            "get": {
                "summary": "Get an order",
                "description": "When given the order number, the API will return the individual order.\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The order number",
                        "required": true,
                        "type": "number",
                        "format": "double"
                    }
                ],
                "tags": [
                    "Orders"
                ],
                "responses": {
                    "200": {
                        "description": "one Order",
                        "schema": {
                            "$ref": "#/definitions/Order"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Order": {
            "type": "object",
            "properties": {
                "order_number": {
                    "type": "string",
                    "description": "Unique identifier representing a specific order"
                },
                "account_number": {
                    "type": "string",
                    "description": "Account Number"
                },
                "order_date": {
                    "type": "string",
                    "format": "date",
                    "description": "Date of the Estimate Completion Time"
                },
                "estimated_shipment_date": {
                    "type": "string",
                    "format": "date",
                    "description": "Estimated Date of the shipment"
                },
                "actual_shipment_date": {
                    "type": "string",
                    "format": "date",
                    "description": "Actual Date of the shipment"
                },
                "freight": {
                    "type": "number",
                    "format":"float",
                    "description": "Cost of the Freight"
                },
                "tax": {
                    "type": "number",
                    "format": "float",
                    "description": "Cost of tax"
                },
                "total": {
                    "type": "number",
                    "format": "float",
                    "description": "Cost total"
                },
                "subtotal": {
                    "type": "number",
                    "format": "float",
                    "description": "Cost of all the items"
                },
                "status": {
                    "type": "string",
                    "description": "Status of the order"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}
